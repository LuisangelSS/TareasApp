@model IEnumerable<BudgetControlApp.Data.Entities.Categoria>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f8ff;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5em;
            color: #333;
            margin-bottom: 30px;
        }

        .btn {
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1em;
        }

        .btn-primary {
            background-color: #ff7e5f;
            border: none;
        }

            .btn-primary:hover {
                background-color: #feb47b;
            }

        .table {
            margin-top: 20px;
        }

            .table thead {
                background-color: #ff7e5f;
                color: white;
            }

            .table th, .table td {
                padding: 15px;
                text-align: left;
            }

        .btn-warning {
            background-color: #ffcc00;
            border: none;
        }

            .btn-warning:hover {
                background-color: #e6b800;
            }

        .btn-info {
            background-color: #66b2ff;
            border: none;
        }

            .btn-info:hover {
                background-color: #3399ff;
            }

        .btn-danger {
            background-color: #ff4d4d;
            border: none;
        }

            .btn-danger:hover {
                background-color: #e60000;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Apartado de Tareas</h1>

        <div class="text-end mb-3">
            <a class="btn btn-primary" asp-action="Create">Crear Nueva Tarea</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tareas</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Modificar</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
